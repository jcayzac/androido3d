#include "GameComponent.h"

#include "Vector3.h"

metaclass PlayerMotionComponent
{
	base GameComponent
	
	function void update(const float timeDelta, GameObject* pParentObject) { public }
	function virtual bool runsInPhase(const GameObjectSystem::GameObjectUpdatePhase phase)	{ public } 
	
  field mMaxSpeed { type Vector3, private }
  field mAcceleration { type Vector3, private }
  
  get mMaxSpeed { public, by const reference }
  set mMaxSpeed { public, by const reference }
  
  get mAcceleration { public, by const reference }
  set mAcceleration { public, by const reference }
}

inline bool PlayerMotionComponent::runsInPhase(const GameObjectSystem::GameObjectUpdatePhase phase)
{
	return phase == GameObjectSystem::PHASE_logic;
}

