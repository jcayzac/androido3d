#include "GameComponent.h"

metaclass MovementComponent
{
	base GameComponent
	
	function void update(const float timeDelta, GameObject* pParentObject) { public }
	function virtual bool runsInPhase(const GameObjectSystem::GameObjectUpdatePhase phase)	{ public } 

	function float interpolateAxis(float& velocity, float& targetVelocity, float acceleration, float secondsDelta) const { protected }
	function float calculateAcceleration(float velocity, float acceleration, float target) const { protected }
	function float scaleAcceleration(float acceleration, float secondsDelta) const { protected }
	function bool passedTarget(float oldVelocity, float newVelocity, float targetVelocity) const { protected }		
}

inline bool MovementComponent::runsInPhase(const GameObjectSystem::GameObjectUpdatePhase phase)
{
	// all components default to the logic phase
	return phase == GameObjectSystem::PHASE_movement;
}